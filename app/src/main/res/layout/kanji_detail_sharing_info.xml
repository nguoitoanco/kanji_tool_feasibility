<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/kanji_sharing_info_layout"
    android:layout_width="650dp"
    android:layout_height="200dp"
    android:layout_marginLeft="@dimen/margin_20"
    android:layout_marginRight="@dimen/margin_20"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/kanji_sharing_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_30"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:gravity="left"
        android:typeface="monospace"
        android:text="@string/app_name"
        android:layout_margin="@dimen/margin_5"
        android:includeFontPadding="false">
    </TextView>

    <TextView
        android:id="@+id/kanji_sharing_info_word"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:textSize="@dimen/text_size_150"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/item_border"
        android:typeface="monospace"
        android:text="a"
        android:includeFontPadding="false"
        android:layout_below="@+id/kanji_sharing_info_title">
    </TextView>

    <LinearLayout
        android:id="@+id/kanji_sharing_detail_info_layout"
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/kanji_sharing_info_word"
        android:paddingLeft="@dimen/padding_10"
        android:background="@drawable/item_border"
        android:gravity="center_vertical"
        android:layout_below="@+id/kanji_sharing_info_title">
        <TextView
            android:id="@+id/kanji_sharing_info_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlackWhite"
            android:maxLines="1"
            android:text="bbb"
            android:textSize="@dimen/text_size_30"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/kanji_sharing_info_kun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlackWhite"
            android:maxLines="1"
            android:text="ccc"
            android:textSize="@dimen/text_size_30"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/kanji_sharing_info_mean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlackWhite"
            android:maxLines="1"
            android:singleLine="true"
            android:text="ddd"
            android:textSize="@dimen/text_size_30"
            android:ellipsize="end"/>
    </LinearLayout>
</RelativeLayout>