<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_2"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/kanji_block_index"
            android:layout_width="@dimen/text_dimension_40"
            android:layout_height="@dimen/text_dimension_40"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_20"
            android:gravity="center"
            android:typeface="monospace"
            android:layout_alignParentLeft="true"
            android:includeFontPadding="false">
        </TextView>
        <TextView
            android:id="@+id/kanji_block_text_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_dimension_40"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_20"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:background="@drawable/list_item_background"
            android:layout_toRightOf="@+id/kanji_block_index"
            android:drawableRight="@mipmap/ic_navigate_next_blue_500_24dp"
            android:includeFontPadding="false">
        </TextView>
    </RelativeLayout>
</android.support.v7.widget.CardView>