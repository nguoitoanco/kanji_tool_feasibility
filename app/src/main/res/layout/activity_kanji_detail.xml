<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/kanji_detail_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBabyBlueEyes"
    tools:context="muscular.man.tools.kanjinvk.activity.KanjiDetailActivity">
    <com.google.android.gms.ads.AdView
        android:id="@+id/detail_ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/detail_top_banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/kanji_detail_appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center">

        <android.support.v7.widget.Toolbar
            android:id="@+id/kanji_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/BlackTheme.CommonToolBarBackground">

            <LinearLayout
                android:id="@+id/kanji_footer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_margin="@dimen/margin_10"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/kanji_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_margin="@dimen/margin_5"
                    android:background="@mipmap/ic_share_white_36dp"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/kanji_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_margin="@dimen/margin_5"
                    android:background="@mipmap/ic_slideshow_white_36dp"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/kanji_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_margin="@dimen/margin_5"
                    android:background="@android:drawable/ic_lock_power_off"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:id="@+id/kanji_detail_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/kanji_detail_appbar">
        <include layout="@layout/content_kanji_detail"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"/>
     </RelativeLayout>

</RelativeLayout>
