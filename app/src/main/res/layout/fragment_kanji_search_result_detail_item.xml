<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_2"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_background"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/kanji_detail_text_view"
            android:layout_width="@dimen/text_dimension_70"
            android:layout_height="@dimen/text_dimension_70"
            android:textSize="@dimen/text_size_50"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:gravity="center"
            android:typeface="monospace"
            android:includeFontPadding="false">
        </TextView>

        <View
            android:id="@+id/kanji_detail_diveder"
            android:layout_width="@dimen/text_dimension_0_5"
            android:layout_height="match_parent"
            android:background="@color/colorDivider"/>

        <LinearLayout
            android:id="@+id/kanji_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_dimension_70"
            android:orientation="vertical"
            android:padding="@dimen/padding_5">
            <TextView
                android:id="@+id/kanji_on_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackWhite"
                android:textSize="@dimen/text_size_15"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/kanji_kun_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackWhite"
                android:textSize="@dimen/text_size_15"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/kanji_mean_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackWhite"
                android:textSize="@dimen/text_size_15"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
